<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Saved Articles</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/saved">Saved Articles</a></li>
    </ul>
  </div>
</nav>
<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>Your Saved Articles</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each saved}}
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading" id="panelHead">
        <h3 class="panel-title">{{this.title}}</h3>
      </div>
      <div class="panel-body">
        <a href="{{this.link}}" id="savedLink">{{this.link}}</a>
        <form class="navbar-form navbar-right" method="POST" action="/delete/{{this.id}}?_method=PUT">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal{{this.id}}" id="addNote">Notes</button>
        
          <button type="submit" class="btn btn-default" id="articleButton">Delete Article</button>
        </form>        
      </div>
    </div>
  </div>
  {{/each}}
</div>

<footer class="footer">
  <div class="container">
    <p>New York Times Mongo Scraper</p>
  </div>
</footer>
